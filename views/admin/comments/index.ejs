<% include ../inc/header %>
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1>Comments</h1>
                </div>
                <table class="table table-stripped">
                    <tr>
                        <th>ID</th>
                        <th>Post</th>
                        <th>Comment</th>
                        <th>Comment By</th>
                        <th>Comment At</th>
                        <th>Action</th>
                    </tr>
                    <%
                        comments.forEach((c,i)=>{
                    %>
                    <tr>
                        <td><%=c.id %></td>
                        <td><%=c.title%></td>
                        <td><%=c.comment %></td>
                        <td><%=c.username %></td>
                        <td><%=c.comment_at %></td>
                        <td><a href="/users/delete/<%=c.id%>" onclick="return confirm('Are you sure to delete?')" class="btn btn-default">
                            <span class="glyphicon glyphicon-trash"></span> Delete
                        </a></td>
                    </tr>
                    <%
                        })
                    %>
                </table>      
            </div>
        </div>
<% include ../inc/footer %>
    